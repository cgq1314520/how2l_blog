<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <!--servlet映射配置-->
    <!--处理具体博客信息展示的servlet-->
    <servlet>
        <servlet-name>infoShowDetail</servlet-name>
        <servlet-class>top.how2l.servlet.blog.infoShow</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>infoShowDetail</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>

    <!--处理首页的servlet-->
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>top.how2l.servlet.blog.indexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!--进行评论异步加载的请求处理-->
    <servlet>
        <servlet-name>comment</servlet-name>
        <servlet-class>top.how2l.servlet.blog.CommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>comment</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>
    <!--进行评论添加的请求处理-->
    <servlet>
        <servlet-name>addComment</servlet-name>
        <servlet-class>top.how2l.servlet.blog.AddCommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addComment</servlet-name>
        <url-pattern>/addComment</url-pattern>
    </servlet-mapping>

    <!--进行视频评论异步加载的请求处理-->
    <servlet>
        <servlet-name>videoComment</servlet-name>
        <servlet-class>top.how2l.servlet.video.SearchCommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>videoComment</servlet-name>
        <url-pattern>/videoComment</url-pattern>
    </servlet-mapping>
    <!--进行视频评论添加的请求处理-->
    <servlet>
        <servlet-name>addVideoComment</servlet-name>
        <servlet-class>top.how2l.servlet.video.AddVideoCommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addVideoComment</servlet-name>
        <url-pattern>/addVideoComment</url-pattern>
    </servlet-mapping>



    <!--对跳转到登陆或者注册请求页面的处理-->
    <servlet>
        <servlet-name>jumpToLogin</servlet-name>
        <servlet-class>top.how2l.servlet.blog.jumpToPage.jumpToLoginRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jumpToLogin</servlet-name>
        <url-pattern>/loginRegister</url-pattern>
    </servlet-mapping>

    <!--跳转到发布博客的页面-->
    <servlet>
        <servlet-name>jumpToPublish</servlet-name>
        <servlet-class>top.how2l.servlet.blog.jumpToPage.jumpToPublishBlog</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jumpToPublish</servlet-name>
        <url-pattern>/ToPublishBlog</url-pattern>
    </servlet-mapping>

    <!--跳转到博客信息显示界面-->
    <servlet>
        <servlet-name>jumpToInfo</servlet-name>
        <servlet-class>top.how2l.servlet.blog.jumpToPage.jumpToInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jumpToInfo</servlet-name>
        <url-pattern>/ToInfoPage</url-pattern>
    </servlet-mapping>

    <!--跳转到你问我答信息显示界面-->
    <servlet>
        <servlet-name>jumpToDiscuss</servlet-name>
        <servlet-class>top.how2l.servlet.discuss.searchQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jumpToDiscuss</servlet-name>
        <url-pattern>/ToDiscussPage</url-pattern>
    </servlet-mapping>

    <!--对登陆请求的处理-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>top.how2l.servlet.blog.loginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--对退出请求的处理-->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>top.how2l.servlet.blog.logoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!--对注册请求的处理-->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>top.how2l.servlet.user.registerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!--对上传图片请求的处理-->
    <servlet>
        <servlet-name>upLoadFile</servlet-name>
        <servlet-class>top.how2l.servlet.blog.upLoadFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>upLoadFile</servlet-name>
        <url-pattern>/upLoadFile</url-pattern>
    </servlet-mapping>

    <!--对上传博客请求的处理-->
    <servlet>
        <servlet-name>FileSubmit</servlet-name>
        <servlet-class>top.how2l.servlet.blog.PublishBlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileSubmit</servlet-name>
        <url-pattern>/FileSubmit</url-pattern>
    </servlet-mapping>

    <!--对问题添加的处理-->
    <servlet>
        <servlet-name>AddQuestion</servlet-name>
        <servlet-class>top.how2l.servlet.discuss.AddQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddQuestion</servlet-name>
        <url-pattern>/addQuestion</url-pattern>
    </servlet-mapping>

    <!--对问题详细展示的处理-->
    <servlet>
        <servlet-name>discussDetail</servlet-name>
        <servlet-class>top.how2l.servlet.discuss.detailQuestionShowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>discussDetail</servlet-name>
        <url-pattern>/discussDetail</url-pattern>
    </servlet-mapping>

    <!--查询问题的所有回复-->
    <servlet>
        <servlet-name>searchReplyAnswer</servlet-name>
        <servlet-class>top.how2l.servlet.discuss.replyAnswerSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchReplyAnswer</servlet-name>
        <url-pattern>/searchReplyAnswer</url-pattern>
    </servlet-mapping>

    <!--对问题回复添加的处理-->
    <servlet>
        <servlet-name>addReplyQuestion</servlet-name>
        <servlet-class>top.how2l.servlet.discuss.addReplyQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addReplyQuestion</servlet-name>
        <url-pattern>/addReplyQuestion</url-pattern>
    </servlet-mapping>

    <!--对搜索栏异步展示的处理-->
    <servlet>
        <servlet-name>searchShow</servlet-name>
        <servlet-class>top.how2l.servlet.blog.searchShowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchShow</servlet-name>
        <url-pattern>/searchShow</url-pattern>
    </servlet-mapping>

    <!--Tomcat中默认就有的servlet，即default，通过对这个的配置即可实现对一些静态资源的放行-->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.jpg</url-pattern>
        <url-pattern>*.png</url-pattern>
        <url-pattern>*.ico</url-pattern>
        <url-pattern>*.gif</url-pattern>
        <url-pattern>*.svg</url-pattern>
        <url-pattern>*.woff</url-pattern>
        <url-pattern>*.woff2</url-pattern>
        <url-pattern>*.JPG</url-pattern>
        <url-pattern>*.PNG</url-pattern>
    </servlet-mapping>
    <!--跳转到直播页面-->
    <servlet>
        <servlet-name>jumpTozb</servlet-name>
        <servlet-class>top.how2l.servlet.video.zbShowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jumpTozb</servlet-name>
        <url-pattern>/jumpToZB</url-pattern>
    </servlet-mapping>
    <!--跳转到直播详细页面-->
    <servlet>
        <servlet-name>zbDetail</servlet-name>
        <servlet-class>top.how2l.servlet.video.zbDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>zbDetail</servlet-name>
        <url-pattern>/zbDetail</url-pattern>
    </servlet-mapping>
    <!--跳转到视频展示页面-->
    <servlet>
        <servlet-name>jumpToVideoShow</servlet-name>
        <servlet-class>top.how2l.servlet.video.videoShowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jumpToVideoShow</servlet-name>
        <url-pattern>/jumpToVideoShow</url-pattern>
    </servlet-mapping>
    <!--跳转到视频详细页面-->
    <servlet>
        <servlet-name>videoDetail</servlet-name>
        <servlet-class>top.how2l.servlet.video.videoDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>videoDetail</servlet-name>
        <url-pattern>/videoDetail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>uploadVideoFile</servlet-name>
        <servlet-class>top.how2l.servlet.blog.uploadVideoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>uploadVideoFile</servlet-name>
        <url-pattern>/FileUploadServlet</url-pattern>
    </servlet-mapping>

    <!--对跳转到个人中心页面的管理-->
    <servlet>
        <servlet-name>toPerson</servlet-name>
        <servlet-class>top.how2l.servlet.person.personShowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>toPerson</servlet-name>
        <url-pattern>/ToPersonShow</url-pattern>
    </servlet-mapping>
    <!--对个人中心数据的异步请求得到-->
    <servlet>
        <servlet-name>blogInfoPerson</servlet-name>
        <servlet-class>top.how2l.servlet.person.searchAllArticleByUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>blogInfoPerson</servlet-name>
        <url-pattern>/getAllArticleWithUserID</url-pattern>
    </servlet-mapping>

    <!--查询所有的问题通过用户id-->
    <servlet>
        <servlet-name>questionInfoPerson</servlet-name>
        <servlet-class>top.how2l.servlet.person.searchAllQuestByUserId</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>questionInfoPerson</servlet-name>
        <url-pattern>/GetAllquestionByUserID</url-pattern>
    </servlet-mapping>
    <!--查询所有的视频通过用户id-->
    <servlet>
        <servlet-name>videoInfoPerson</servlet-name>
        <servlet-class>top.how2l.servlet.person.searchAllVideoByUserID</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>videoInfoPerson</servlet-name>
        <url-pattern>/GetAllVideoByUserID</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>MailServlet</servlet-name>
        <servlet-class>top.how2l.servlet.Mail.MailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MailServlet</servlet-name>
        <url-pattern>/mailServlet</url-pattern>
    </servlet-mapping>
    <!--编码对应的拦截器-->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>top.how2l.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--登录的拦截器优化，针对一些不愿公开的地方实现拦截判断是否登录-->
    <filter>
        <filter-name>loginJudge</filter-name>
        <filter-class>top.how2l.filter.loginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginJudge</filter-name>
        <!--去创作中心时的拦截-->
        <url-pattern>/ToPublishBlog</url-pattern>
    </filter-mapping>
</web-app>
